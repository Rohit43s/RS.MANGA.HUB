<script>
/* =========================
   RS MANGA HUB — Hybrid Single File
   Option 3: Hybrid-ready local demo
   - All buttons functional using localStorage
   - Clear FIREBASE HOOK comments to replace local logic
   ========================= */

/* ---------- CONFIG ---------- */
const ADMIN_PASSWORD = 'rs-admin-2025';             // demo admin password (client-side) - replace in production
const STORAGE_KEYS = {
  users: 'rs_users_v2',
  session: 'rs_session_v2',
  uploads: 'rs_uploads_v2',
  published: 'rs_published_v2',
  notifications: 'rs_notifs_v2',
  commentsPrefix: 'rs_comments_v2_'               // + mangaId
};

/* ---------- UTILITIES ---------- */
const $ = (s) => document.querySelector(s);
const $$ = (s) => Array.from(document.querySelectorAll(s));
const uid = (p='') => p + Date.now().toString(36) + Math.random().toString(36).slice(2,8);
const now = () => Date.now();

function lsGet(k, d=null){ try{ const v = localStorage.getItem(k); return v?JSON.parse(v):d }catch{ return d } }
function lsSet(k,v){ localStorage.setItem(k, JSON.stringify(v)) }
function lsRm(k){ localStorage.removeItem(k) }

/* ---------- THEME ---------- */
(function initTheme(){
  const saved = lsGet('rs_theme_v2');
  const prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
  if(saved === 'light') document.documentElement.classList.add('light');
  else if(saved === 'dark') document.documentElement.classList.remove('light');
  else if(!prefersDark) document.documentElement.classList.add('light');
})();
$('#themeToggle')?.addEventListener('click', ()=>{
  const isLight = document.documentElement.classList.toggle('light');
  lsSet('rs_theme_v2', isLight ? 'light' : 'dark');
});

/* ---------- APP STATE & SEED DATA ---------- */
(function seed(){
  if(!lsGet(STORAGE_KEYS.published)){
    const sample = [{
      id: 'sample',
      title: 'Ryota — The Broken Blade',
      author: 'Ayumi Natori',
      summary: 'A dark revenge tale. Ryota fights shadows in and outside his heart.',
      tags: ['Action','Drama'],
      cover: 'https://images.unsplash.com/photo-1543011908-7d3f6e9b2ae3?q=80&w=1200&auto=format&fit=crop&sat=-100',
      pages: [
        'https://images.unsplash.com/photo-1543011908-7d3f6e9b2ae3?q=80&w=1200&auto=format&fit=crop&sat=-100',
        'https://images.unsplash.com/photo-1511919884226-fd3cad34687c?q=80&w=800&auto=format&fit=crop&sat=-100'
      ],
      views: 34234,
      likes: 4200,
      status: 'ongoing',
      createdAt: now()
    }];
    lsSet(STORAGE_KEYS.published, sample);
  }
  if(!lsGet(STORAGE_KEYS.users)) {
    lsSet(STORAGE_KEYS.users, [
      { id: 'u_admin', email: 'admin@rsmanga.demo', pass: 'admin', name: 'Admin Demo', isAdmin: true }
    ]);
  }
  if(!lsGet(STORAGE_KEYS.uploads)) lsSet(STORAGE_KEYS.uploads, []);
  if(!lsGet(STORAGE_KEYS.notifications)) lsSet(STORAGE_KEYS.notifications, []);
})();

/* ---------- AUTH (local demo) ---------- */
function currentSession(){ return lsGet(STORAGE_KEYS.session, null) }
function setSession(sess){ lsSet(STORAGE_KEYS.session, sess) }
function logout(){ lsRm(STORAGE_KEYS.session); renderAuthUI(); location.reload(); }

/* Simple local user store (for demo). In production replace with Firebase Auth or server. */
/* FIREBASE HOOK: Replace registerLocal/loginLocal with firebase auth methods */
function registerLocal(email, pass, name=''){
  const users = lsGet(STORAGE_KEYS.users, []);
  if(users.find(u=>u.email===email)) throw new Error('Email already registered');
  const u = { id: uid('u_'), email, pass, name, isAdmin:false, favorites:[], likes:[], bookmarks:[] };
  users.push(u); lsSet(STORAGE_KEYS.users, users);
  setSession({ id: u.id, email: u.email, name: u.name });
  return u;
}
function loginLocal(email, pass){
  const users = lsGet(STORAGE_KEYS.users, []);
  const u = users.find(it => it.email===email && it.pass===pass);
  if(!u) throw new Error('Invalid credentials');
  setSession({ id: u.id, email: u.email, name: u.name, isAdmin: !!u.isAdmin });
  return u;
}

/* ---------- UI: Auth area ---------- */
function renderAuthUI(){
  const authArea = $('#authArea');
  const sess = currentSession();
  if(!authArea) return;
  if(sess){
    authArea.innerHTML = `
      <div style="display:flex;gap:8px;align-items:center">
        <div style="font-size:13px;color:var(--muted)">Hi, ${sess.name || sess.email}</div>
        <button id="btnProfile" class="btn small">Profile</button>
        <button id="btnLogout" class="btn small">Logout</button>
      </div>`;
    $('#btnLogout')?.addEventListener('click', logout);
    $('#btnProfile')?.addEventListener('click', ()=> alert('Profile page placeholder (demo)'));
  } else {
    authArea.innerHTML = `<div style="display:flex;gap:8px"><button id="btnLogin" class="btn small ghost">Login</button><button id="btnSignup" class="btn small">Sign Up</button></div>`;
    $('#btnLogin')?.addEventListener('click', openLogin);
    $('#btnSignup')?.addEventListener('click', openSignup);
  }
}
renderAuthUI();

/* Login / Signup simple modals (prompt-based) */
function openSignup(){
  const email = prompt('Email:'); if(!email) return;
  const pass
